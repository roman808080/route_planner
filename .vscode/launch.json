    "version": "0.2.0",
    "configurations": [
        {
            "name": "Python: Remote Attach",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5678
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "."
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "Build For Debug",
            "postDebugTask": "Docker Compose Stop Dev",
        },
        {
            "name": "Python: Remote Attach Tests",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5679
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "."
                },
                {
                    "localRoot": "${workspaceFolder}/tests",
                    "remoteRoot": "/tests"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "Run Tests For Debug",
        },
        {
            "name": "Python: Data Generator",
            "type": "python",
            "request": "attach",
            "connect": {
                "host": "localhost",
                "port": 5680
            },
            "pathMappings": [
                {
                    "localRoot": "${workspaceFolder}/src",
                    "remoteRoot": "/app"
                },
                {
                    "localRoot": "${workspaceFolder}/tests",
                    "remoteRoot": "/tests"
                },
                {
                    "localRoot": "${workspaceFolder}/scripts",
                    "remoteRoot": "/scripts"
                }
            ],
            "justMyCode": false,
            "preLaunchTask": "Run Data Generator For Debug",
        },
    ]
}